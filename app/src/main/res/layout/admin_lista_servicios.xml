<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >
    <ImageView
        android:src="@drawable/firma_csin"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:id="@+id/image_adminServicios"/>

    <TextView
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre de Producto/Servicio"
        android:id="@+id/name_adminServicios"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_adminServicios" />

    <TextView
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:id="@+id/description_adminServicios"
        android:layout_below="@+id/name_adminServicios"
        android:layout_toRightOf="@+id/image_adminServicios" />



</RelativeLayout>