<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.Black">


    <ImageView
        android:id="@+id/img"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:background="@drawable/common_plus_signin_btn_icon_light_disabled"
        />
    <TextView
        android:layout_height="60dp"
        android:layout_width="160sp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="Titulo del trabajo"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/img"
        android:layout_toRightOf="@+id/img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/titulo" />

    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/info_tareas"
        android:layout_below="@+id/img"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignLeft="@+id/img"
        android:layout_alignStart="@+id/img"
        android:layout_alignRight="@+id/titulo"
        android:layout_alignEnd="@+id/titulo"
        android:layout_margin="10dp"
        android:padding="5dp"
        />

</RelativeLayout>